{
  "name": "chain-cast",
  "version": "1.0.0",
  "description": "A DAO-governed blockchain event processing platform designed to listen, process and stream events from smart contracts deployed on various EVM blockchain networks",
  "main": "src/main.ts",
  "scripts": {
    "dev": "bun --watch src/main.ts",
    "dev:debug": "bun --inspect=4321 --watch src/main.ts",
    "start": "NODE_ENV=production bun src/main.ts",
    "build": "bun install && bunx prisma generate",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:debug": "bun test --inspect-brk",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "lint:unsafe": "biome lint --write --unsafe .",
    "format": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "db:reset": "bunx prisma migrate reset --force",
    "db:migrate": "bunx prisma migrate dev",
    "db:push": "bunx prisma db push",
    "setup:ganache": "bun scripts/setup-ganache.ts",
    "ganache:dev": "ganache -h 0.0.0.0 -p 8545 -a 50 -s 0x6d2119524d65ea0b15b214ef260d3acdf8ca0ec6ec68045b5785d970f5ad97bd3d0025d212e625a8a21920852cc165c10faa6d8387a0c2530d1ffc0d265d92935749"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/layerx-labs/chain-cast.git"
  },
  "author": "LayerX Labs <chaincast@layerx.xyz>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/layerx-labs/chain-cast/issues"
  },
  "homepage": "https://github.com/layerx-labs/chain-cast#readme",
  "keywords": [
    "blockchain",
    "events",
    "smart-contracts",
    "graphql",
    "ethereum",
    "dao",
    "governance",
    "defi",
    "web3",
    "event-processing",
    "chaincast",
    "chain-token"
  ],
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/bun": "latest",
    "@types/uuid": "^9.0.2",
    "ganache": "^7.8.0",
    "husky": "^8.0.3",
    "prisma": "^4.15.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^8.8.1",
    "@envelop/core": "^4.0.0",
    "@envelop/graphql-middleware": "^5.0.0",
    "@graphql-yoga/node": "^3.9.1",
    "@paljs/plugins": "^5.3.3",
    "@pothos/core": "^3.30.0",
    "@pothos/plugin-prisma": "^3.51.1",
    "@pothos/plugin-validation": "^3.9.2",
    "@prisma/client": "^4.15.0",
    "@taikai/scribal": "^1.0.3",
    "@types/cookie": "^0.5.1",
    "@types/express": "^4.17.17",
    "axios": "^1.4.0",
    "bullmq": "^3.15.1",
    "cookie": "^0.5.0",
    "cookie-parser": "^1.4.6",
    "express": "^4.18.2",
    "googleapis": "^118.0.0",
    "graphql": "^16.6.0",
    "graphql-request": "^7.2.0",
    "graphql-scalars": "^1.22.0",
    "handlebars": "^4.7.7",
    "inflection": "^2.0.1",
    "viem": "^2.21.0",
    "zod": "^3.21.4"
  }
}
