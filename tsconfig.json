{
  "compilerOptions": {
    "lib": ["ESNext"],
    /* Language and Environment */
    "target": "ESNext",
    /* Modules */
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["bun-types"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["src/*"],
      "@/lib/*": ["src/lib/*"],
      "@/util/*": ["src/util/*"],
      "@/graphql/*": ["src/graphql/*"],
      "@/types/*": ["src/types/*"],
      "@/constants/*": ["src/constants/*"],
      "@/services/*": ["src/services/*"],
      "@/initializers/*": ["src/initializers/*"],
      "@/resolvers/*": ["src/graphql/resolvers/*"],
      "@/config/*": ["src/config/*"],
      "@/middleware/*": ["src/middleware/*"],
      "@/processors/*": ["src/instructions/*"],
      "@/dsl/*": ["src/dsl/*"],
      "@/dsl": ["src/dsl"]
    },
    /* Type Checking */
    "strict": true,
    "skipLibCheck": true,
    /* Emit */
    "noEmit": true
  },
  "include": ["src/**/*.ts", "scripts/**/*.ts"]
}
